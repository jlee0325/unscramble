HF_TOKEN=hf_xxx
DISABLE_LLM=1                 # 1 = don't call an LLM (use local fallback); 0 = use LLM endpoint below
MIN_ZIPF=3.4                  # filter rare words from dictionary (higher = stricter)
LIMIT_VOCAB=50000             # size of base word list to index

# LLM (OpenAI-compatible endpoint; used only if DISABLE_LLM=0)
VLLM_BASE_URL=http://vllm:8001/v1    # or http://ollama:11434/v1 if using Ollama
MODEL_NAME=TinyLlama/TinyLlama-1.1B-Chat-v1.0
VLLM_API_KEY=EMPTY                    # not checked by vLLM/Ollama
